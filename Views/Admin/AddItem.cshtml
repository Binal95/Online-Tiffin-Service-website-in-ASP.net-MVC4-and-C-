@{
    ViewBag.Title = "AddItem";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AddItem</h2>


<div class="box">
    <div id="content">
        <div class="container">
            <div class="center-block">
                <div class="row">
                    <div class="col-md-6">
 
                        @using (Html.BeginForm("AddItem", "Admin", FormMethod.Post, new { id = "item", enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                @Html.TextBox("Name", "", new { id = "Name", @class = "form-control", placeholder = "Enter Item Name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBox("Description", "", new { id = "Description", @class = "form-control", placeholder = "Enter Description of Item" })
                            </div>
                            <div class="form-group">
                                <input type="file" name="file" accept="image/*" id="file" placeholder="Upload Image" />
                            </div>
                            <div class="form-group">
                                @Html.TextBox("Price", "", new { id = "Price", @class = "form-control", placeholder = "Enter Price" })
                            </div>
                            <div class="text-center">
                                <button type="submit" id="submit1" class="btn btn-template-main"><i class="fa fa-user-md"></i>Add New Item</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section reg
{
    <script src="@Url.Content("~/js/jquery-1.11.1.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.validate.min.js")"></script>



    <script type="text/javascript">

        $(document).ready(function () {

            $("#item").validate({

                rules: {
                    Name: {
                        required: true
                    },
                    Description: {
                        required: true
                    },
                    file: {
                        required: true
                    },
                    Price: {
                        required: true
                    }
                },

                messages: {
                    Name: {
                        required: 'Please Enter  Name'
                    },
                    Description: {
                        required: 'Please Enter details'
                    },
                    file: {
                        required: 'Please Enter image'
                    },
                    Price: {
                        required: 'Please Enter price'
                    }
                },

                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }

            });
        });


    </script>

}
